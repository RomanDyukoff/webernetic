- var services = ['Сайт', 'SEO', 'SMM', 'Доработка', 'Контекст', 'Другое']
- var inputs = ['Имя *', 'Телефон *', 'E-mail *', 'Сайт *']
footer.footer
	.container
		.footer__wrapper
			.footer__image
				.footer__pm
			form.footer__form
				h2.footer__title Заказать консультацию
				.footer__actions
					.footer__inputs
						each input in inputs
							input.footer__input(type="text" placeholder=input)
					.footer__checkboxs
						each service in services
							label.footer__label
								input(type="checkbox")
								span #{service}

					button.footer__button Отправить
				.footer__link
					h3 Может быть полезно
					a(href="https://www.belpromimpex.by/" target="_blank") БЕЛПРОМИМПЭКС
