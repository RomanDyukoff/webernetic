mixin textBox(title, team, boxClass)
  .box(class=boxClass)
    h4.box__title.subtitle= title
    ul.box__list.text
      each member in team
        li= member

mixin sectionWrapper(sectionClass, containerClass, articleClass)
  section(class=sectionClass)
    .container(class=containerClass)
      article(class=articleClass)
        block

mixin scroll(controllerId, thumbId, containerId, trackId)
  .scroll
    .scroll__controller(id=controllerId)
      .scroll__thumb(id=thumbId)
    .scroll__container(id=containerId)
      .scroll__track(id=trackId)
        block

mixin lines(lot, extraClass)
  .lines(class=extraClass)
    - for (var i = 0; i < lot; i++)
      div(class="lines__line")